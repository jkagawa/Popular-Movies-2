<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_video_list"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/detail_video_thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/padding_margin_level_2"
        android:paddingLeft="@dimen/padding_margin_level_1"
        android:paddingRight="@dimen/padding_margin_level_1" />

    <TextView
        android:id="@+id/detail_video_name"
        android:layout_width="@+id/detail_video_thumbnail"
        android:layout_height="wrap_content"
        android:text="@string/video_name"
        app:layout_constraintTop_toBottomOf="@+id/detail_video_thumbnail"
        app:layout_constraintRight_toRightOf="@+id/detail_video_thumbnail"
        app:layout_constraintLeft_toLeftOf="@+id/detail_video_thumbnail"
        android:paddingTop="@dimen/padding_margin_level_1"
        android:paddingLeft="@dimen/padding_margin_level_2b"
        android:paddingRight="@dimen/padding_margin_level_2b"
        android:paddingBottom="@dimen/padding_margin_level_3" />

</android.support.constraint.ConstraintLayout>