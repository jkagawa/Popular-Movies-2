<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout_review_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/detail_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/review_content"
        android:paddingTop="@dimen/padding_margin_level_2b"
        android:paddingLeft="@dimen/padding_margin_level_3"
        android:paddingRight="@dimen/padding_margin_level_3"
        android:paddingBottom="@dimen/padding_margin_level_3"
        android:textSize="@dimen/text_size_medium"/>

    <TextView
        android:id="@+id/detail_review_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/review_author"
        app:layout_constraintTop_toBottomOf="@id/detail_review"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:paddingTop="@dimen/padding_margin_level_1"
        android:paddingLeft="@dimen/padding_margin_level_3"
        android:paddingRight="@dimen/padding_margin_level_3"
        android:paddingBottom="@dimen/padding_margin_level_2b"
        android:textSize="@dimen/text_size_medium"/>

    <View
        android:id="@+id/review_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/padding_margin_level_base"
        android:paddingLeft="@dimen/padding_margin_level_3"
        android:paddingRight="@dimen/padding_margin_level_3"
        android:layout_marginRight="@dimen/padding_margin_level_3"
        android:layout_marginLeft="@dimen/padding_margin_level_3"
        app:layout_constraintTop_toBottomOf="@id/detail_review_author"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:background="@color/colorAccent"/>

</android.support.constraint.ConstraintLayout>